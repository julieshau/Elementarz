<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/zewnetrzny"
        android:layout_width="match_parent"
        android:layout_height="459dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="100dp"
        android:layout_weight="0"
        android:orientation="vertical">

        <Button
            android:id="@+id/game_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="GRA"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="38sp"
            app:backgroundTint="@null" />


        <TextView
            android:id="@+id/time_in_game_stats"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:text="Czas spędzony w grze: "
            android:textColor="@color/brown95"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/correct_answers_stats"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:text="Poprawne odpowiedzi: "
            android:textColor="@color/brown95"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/wrong_answers_stats"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:text="Błędne odpowiedzi: "
            android:textColor="@color/brown95"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/completed_game_stats"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:text="Ukończone gry: "
            android:textColor="@color/brown95"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/average_time_completing_game"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:text="Średni czas gry: "
            android:textColor="@color/brown95"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/best_time_completing_game"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:text="Najlepszy czas gry: "
            android:textColor="@color/brown95"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:gravity="center|bottom">

        <Button
            android:id="@+id/reset_statistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_beige"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="RESETUJ"
            android:textAllCaps="false"
            android:textColor="@color/beige"
            android:textSize="20sp"
            app:backgroundTint="@null" />

    </LinearLayout>
</LinearLayout>